<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.publiclibrary.User_UI"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.95">

                <ImageView
                    android:layout_width="103dp"
                    android:layout_height="124dp"
                    app:srcCompat="@android:color/darker_gray"
                    android:id="@+id/imgprofile3"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="120dp" />

                <TextView
                    android:text="Profile Picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtvpp"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/imgprofile"
                    android:layout_marginEnd="7dp"
                    android:textColor="@android:color/background_light" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <TextView
                    android:text="Gender"
                    android:layout_width="318dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/space" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtname3"
                    android:hint="Your Name"
                    android:fontFamily="serif"
                    android:background="@drawable/edittext"
                    android:textAlignment="center"
                    android:layout_above="@+id/textView"
                    android:layout_toEndOf="@+id/space" />

                <Button
                    android:text="Upload"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/btnuploadimg"
                    android:background="@android:color/holo_blue_light"
                    android:layout_below="@+id/imgprofile3"
                    android:layout_alignStart="@+id/imgprofile3"
                    android:layout_alignEnd="@+id/imgprofile3" />

                <TextView
                    android:text="click here to "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/space5"
                    android:layout_alignStart="@+id/textView29" />

                <TextView
                    android:text="change Picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:layout_below="@+id/textView21"
                    android:layout_alignEnd="@+id/imgprofile3" />

            </RelativeLayout>

            <RadioGroup
                android:layout_width="319dp"
                android:layout_height="75dp" >

                <RadioButton
                    android:text="Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbmale3"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <RadioButton
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbfemale3"
                    android:layout_weight="1"
                    android:textSize="16sp" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/txtaddress3"
                android:hint="Address"
                android:fontFamily="serif"
                android:background="@drawable/edittext"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <TextView
                android:text="Date Of Birth"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="19sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtdob3"
                android:hint="DD/MM/YYYY"
                android:background="@drawable/edittext"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtnic3"
                android:hint="NIC Number"
                android:fontFamily="serif"
                android:background="@drawable/edittext"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.06" />

            <Button
                android:text="Update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnupdate2"
                android:layout_weight="0.54"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
